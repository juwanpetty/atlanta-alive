<%= form_for @photo, html: { multipart: true } do |form| %>
  <p>
    <%= form.label :image %><br>
    <%= form.file_field :image %>
  </p>
  
  <p>
    <%= form.label :location %><br>
    <%= form.text_field :location %>
  </p>
 
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>